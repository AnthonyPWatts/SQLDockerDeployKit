{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dbName": {
      "type": "string",
      "defaultValue": "myDatabase",
      "metadata": {
        "description": "Name of the SQL database"
      }
    },
    "saPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the SQL Server System Administrator account"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-03-01",
      "name": "moviedbcontainergroup",
      "location": "eastus",
      "properties": {
        "containers": [
          {
            "name": "moviedbcontainer",
            "properties": {
              "image": "ghcr.io/anthonypwatts/sqldockerdeploykit/moviesdb:main",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGb": 2.0
                }
              },
              "environmentVariables": [
                {
                  "name": "DB_NAME",
                  "value": "[parameters('dbName')]"
                },
                {
                  "name": "SA_PASSWORD",
                  "value": "[parameters('saPassword')]"
                }
              ],
              "ports": [
                {
                  "port": 1433
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "OnFailure",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": 1433
            }
          ]
        }
      }
    }
  ]
}
